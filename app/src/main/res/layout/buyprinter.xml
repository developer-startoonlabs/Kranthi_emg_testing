<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="60dp"
    android:background="@drawable/popup_window">
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="25dp"
            tools:ignore="MissingConstraints">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="30dp"
                android:src="@drawable/printer_ic_2"/>
            <TextView
                android:layout_marginTop="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thermal Printer Not Found"
                android:textSize="20dp"
                android:fontFamily="@font/pheezee_font"/>
            <LinearLayout
                android:layout_marginTop="12dp"
                android:id="@+id/scan_layout_test"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/progressBar_testing_1"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/circle_porg"
                    />

                <ProgressBar
                    android:visibility="gone"
                    android:id="@+id/progressBar_testing_2"
                    android:layout_width="25dp"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:indeterminate="true"
                    style="?android:attr/progressBarStyleLarge" />
                <TextView
                    android:id="@+id/scan_th_device"
                    android:textColor="@color/good_green"
                    android:paddingLeft="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Scan"
                    android:textSize="20dp"
                    android:fontFamily="@font/pheezee_font"/>


            </LinearLayout>
            <TextView
                android:layout_marginTop="32dp"
                android:id="@+id/buy_now_ptr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/buy_printer"
                android:textSize="20dp"
                android:fontFamily="@font/pheezee_font"/>
        </LinearLayout>
        <View
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:background="@color/bodypart_heading"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_height="1dp"/>
        <LinearLayout
            android:id="@+id/other_printer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            tools:ignore="MissingConstraints">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:textSize="20dp"
                android:textColor="@color/good_green"
                android:fontFamily="@font/pheezee_font"
                android:text="Print with other Printer"/>

        </LinearLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>